<div id="form">
    <h2>Login</h2>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}

    <form action="/login" method="POST">

        <label> Email
            <input type="email" name="email" placeholder="rockstar@ironhack.com" required />
        </label>

        <label>Password
            <input type="password" name="password" placeholder="********" required />
        </label>

        <button type="submit">Login</button>

    </form>
</div>