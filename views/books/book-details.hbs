<section class="book-details">
    <h2>{{title}}</h2>
    <p>
        Author: {{author.name}} <br />
        Rating: {{rating}} <br />
    </p>
    <p>
        <strong>Description:</strong>
        {{description}}
    </p>

    <p>
        <form action="/books/{{_id}}/delete" method="POST">
            <button>Delete</button>
        </form>
    </p>

</section>

